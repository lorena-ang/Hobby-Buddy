<%- include (".././partials/header") %>
    <title>HobbyBuddy | Mis publicaciones</title>
    <%- include (".././partials/navbar") %>

        <div class="container text-center my-5 mx-auto">
            <h3>Mis publicaciones</h3>
            <br>
            <% if(events) { %>
                <% events.forEach(event=> { %>
                    <div class="card bg-dark mx-5 px-5 py-4">
                        <div class="row">
                            <div class="col">
                                <div>
                                    <a href="/eventos/<%= event._id %>"><input type="image" src="<%= event.image %>"
                                            alt="<%= event.name %> image" name="saveForm" class="submit" id="saveForm"
                                            style="max-width: 200px; max-height: 150px;" /></a>
                                    <h2 class="pt-2"><a href="/eventos/<%= event._id %>">
                                            <%= event.name %>
                                        </a></h2>
                                    <p>Descripci√≥n: <%= event.description %>
                                    </p>
                                    <p>Comentarios: <%= event.amountOfComments %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% }); %>
                        <% } %>
        </div>

        <%- include (".././partials/footer") %>