<%- include (".././partials/header") %>
    <title>HobbyBuddy | Registro</title>
    <%- include (".././partials/navbar-login") %>

        <section class="gradient-custom pb-5">
            <div class="container h-100 py-3">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5 mt-5 pt-2 ">
                        <div class="card bg-dark text-white border-0" style="border-radius: 1rem;">
                            <div class="card-body p-5">
                                <div class="mx-2">
                                    <div class="text-center">
                                        <h2 class="fw-bold mb-2">Registro</h2>
                                        <p class="text-white-50 mb-5">¡Conecta con gente como tú!</p>
                                    </div>

                                    <form action='/registro' method='POST'>
                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="email">Correo
                                                electrónico:</label>
                                            <input class="form-control" type="email" name="user[email]" required>
                                        </div>
                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="username">Nombre de
                                                usuario:</label>
                                            <input class="form-control" type="username" name="user[name]" required>
                                        </div>
                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="password">Contraseña:</label>
                                            <input class="form-control" type="password" name="user[password]" required>
                                        </div>
                                        <div class="form-outline mb-3">
                                            <label class="form-label" for="password">Confirma tu
                                                contraseña:</label>
                                            <input class="form-control" type="password" name="user[confirm_password]"
                                                required>
                                        </div>

                                        <div class="text-center mb-4">
                                            <button class="btn btn-outline-light btn-lg my-4 px-5"
                                                type="submit">Registrar</button>
                                            <p>¿Ya tienes cuenta? <a href="/iniciar_sesion">Inicia sesión.</a>
                                            </p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include (".././partials/footer") %>